/* ===== STYLES GÉNÉRAUX ===== */
* {
    font-family: "Inter", "Segoe UI", "Roboto", sans-serif;
    font-size: 12px; /* Taille de police réduite */
    spacing: 6px; /* Espacement général augmenté */
}

QMainWindow, QDialog {
    background-color: #F3EFE0;
    border-radius: 8px;
    padding: 12px;
}

/* ===== MAINWINDOW ===== */
MainWindow {
    background-color: #F3EFE0;
    padding: 15px;
}

/* Conteneur central avec plus d'espace */
MainWindow QWidget#centralwidget {
    background-color: transparent;
    padding: 15px;
}

/* Boutons principaux dans MainWindow - plus petits */
MainWindow QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                                stop:0 #8A9A5B, stop:1 #9aaa6b);
    color: #FFFFFF;
    border: none;
    border-radius: 6px;
    padding: 6px 15px; /* Padding réduit */
    font-size: 12px; /* Taille de police réduite */
    font-weight: 600;
    min-width: 90px; /* Largeur réduite */
    min-height: 28px; /* Hauteur réduite */
    margin: 8px 12px; /* Marge augmentée entre les boutons */
}

/* Plus d'espace entre les boutons */
MainWindow QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                                stop:0 #9aaa6b, stop:1 #aaba7b);
}

MainWindow QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                                stop:0 #7a8a4e, stop:1 #8A9A5B);
}

/* ===== ADDMATERIALDIALOG ===== */
AddMaterialDialog {
    background-color: #F3EFE0;
    border: none;
    padding: 15px;
}

/* Titre principal - plus petit */
AddMaterialDialog QLabel#label_8 {
    color: #4D362D;
    font-size: 16px; /* Taille réduite */
    font-weight: 700;
    letter-spacing: -0.1px;
    background: transparent;
    border: none;
    margin-bottom: 20px; /* Marge augmentée sous le titre */
    padding: 0 0 8px 0;
    qproperty-alignment: AlignCenter;
}

/* GroupBox avec plus d'espace intérieur */
AddMaterialDialog QGroupBox#AjouterMaterielGroupBox {
    background-color: #FFFFFF;
    border: 1px solid #E8E4DC;
    border-radius: 8px;
    padding: 12px; /* Padding réduit */
    margin: 20px 0; /* Marge augmentée autour du groupbox */
    font-weight: 500;
    color: #4D362D;
}

AddMaterialDialog QGroupBox#AjouterMaterielGroupBox::title {
    color: #8A9A5B;
    font-size: 13px; /* Taille réduite */
    font-weight: 600;
    subcontrol-origin: margin;
    left: 8px;
    padding: 0 8px;
    background-color: transparent;
    margin-bottom: 6px; /* Espacement augmenté */
}

/* Container du formulaire */
AddMaterialDialog QWidget#gridLayoutWidget {
    background-color: transparent;
    padding: 5px;
}

/* Grid layout avec PLUS d'espacement entre les lignes */
AddMaterialDialog QGridLayout {
    margin: 8px;
    spacing: 15px; /* ESPACEMENT AUGMENTÉ entre les éléments */
}

/* Labels du formulaire - plus petits */
AddMaterialDialog QLabel {
    font-size: 11px; /* Taille réduite */
    font-weight: 500;
    color: #374151;
    padding: 3px 0; /* Padding réduit */
    background: transparent;
    margin-right: 15px; /* Marge augmentée entre label et champ */
    min-width: 140px; /* Largeur réduite */
}

/* Labels spécifiques */
AddMaterialDialog QLabel#label,
AddMaterialDialog QLabel#label_2,
AddMaterialDialog QLabel#label_3,
AddMaterialDialog QLabel#label_4,
AddMaterialDialog QLabel#label_5,
AddMaterialDialog QLabel#label_6,
AddMaterialDialog QLabel#label_7,
AddMaterialDialog QLabel#label_16 {
    color: #4D362D;
    font-weight: 500;
    font-size: 11px; /* Taille réduite */
}

/* Champs de formulaire - plus petits mais avec plus d'espace autour */
AddMaterialDialog QLineEdit,
AddMaterialDialog QSpinBox,
AddMaterialDialog QDateEdit,
AddMaterialDialog QComboBox {
    background-color: #F9FAFB;
    border: 1px solid #E5E7EB; /* Bordure plus fine */
    border-radius: 5px;
    padding: 6px 10px; /* Padding réduit */
    font-size: 11px; /* Taille de police réduite */
    color: #111827;
    selection-background-color: #8A9A5B;
    selection-color: #FFFFFF;
    min-height: 26px; /* Hauteur réduite */
    min-width: 160px; /* Largeur réduite */
    margin: 4px 0; /* Marge augmentée entre les champs */
}

AddMaterialDialog QLineEdit:focus,
AddMaterialDialog QSpinBox:focus,
AddMaterialDialog QDateEdit:focus,
AddMaterialDialog QComboBox:focus {
    background-color: #FFFFFF;
    border-color: #8A9A5B;
    outline: none;
}

AddMaterialDialog QLineEdit:hover,
AddMaterialDialog QSpinBox:hover,
AddMaterialDialog QDateEdit:hover,
AddMaterialDialog QComboBox:hover {
    border-color: #D1D5DB;
    background-color: #FFFFFF;
}

/* Section des boutons avec plus d'espace */
AddMaterialDialog QWidget#horizontalLayoutWidget {
    background-color: transparent;
    padding: 20px 15px; /* Padding augmenté */
    margin-top: 25px; /* Marge augmentée au-dessus */
}

/* Horizontal layout avec PLUS d'espace entre les boutons */
