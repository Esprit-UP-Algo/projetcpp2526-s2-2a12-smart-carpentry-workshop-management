/* ===== STYLES COMMUNS POUR TOUS LES DIALOGUES ===== */
/* SpinBox - plus petits */
QSpinBox::up-button, QSpinBox::down-button {
    border: none;
    background-color: transparent;
    width: 18px; /* Largeur réduite */
    height: 10px; /* Hauteur réduite */
    margin: 1px 1px;
}

QSpinBox::up-button {
    subcontrol-position: top right;
    margin-top: 1px;
}

QSpinBox::down-button {
    subcontrol-position: bottom right;
    margin-bottom: 1px;
}

QSpinBox::up-arrow {
    border-left: 3px solid transparent;
    border-right: 3px solid transparent;
    border-bottom: 4px solid #6B7280; /* Taille réduite */
}

QSpinBox::down-arrow {
    border-left: 3px solid transparent;
    border-right: 3px solid transparent;
    border-top: 4px solid #6B7280; /* Taille réduite */
}

QSpinBox::up-button:hover, QSpinBox::down-button:hover {
    background-color: rgba(138, 154, 91, 0.1);
}

/* ComboBox - plus petit */
QComboBox {
    padding-right: 25px; /* Réduit */
}

QComboBox::drop-down {
    border: none;
    width: 22px; /* Largeur réduite */
    background-color: transparent;
}

QComboBox::down-arrow {
    border-left: 3px solid transparent;
    border-right: 3px solid transparent;
    border-top: 4px solid #6B7280; /* Taille réduite */
}

QComboBox QAbstractItemView {
    background-color: #FFFFFF;
    border: 1px solid #E5E7EB;
    border-radius: 5px;
    selection-background-color: rgba(138, 154, 91, 0.1);
    selection-color: #111827;
    padding: 6px; /* Padding réduit */
    margin: 3px 0; /* Marge augmentée */
}

/* DateEdit - plus petit */
QDateEdit::drop-down {
    width: 22px; /* Largeur réduite */
    border-left: 1px solid transparent;
}

QDateEdit::down-arrow {
    border-left: 3px solid transparent;
    border-right: 3px solid transparent;
    border-top: 4px solid #6B7280; /* Taille réduite */
}

/* MenuBar - plus petit */
QMenuBar {
    background-color: #FFFFFF;
    color: #4D362D;
    border-bottom: 1px solid #E8E4DC;
    padding: 6px 12px; /* Padding réduit */
    min-height: 25px; /* Hauteur réduite */
}

QMenuBar::item {
    padding: 5px 10px; /* Padding réduit */
    border-radius: 3px;
    margin: 0 2px; /* Marge réduite */
}

QMenuBar::item:selected {
    background-color: rgba(138, 154, 91, 0.1);
    color: #8A9A5B;
}

/* StatusBar - plus petit */
QStatusBar {
    background-color: #FFFFFF;
    color: #6B7280;
    border-top: 1px solid #E8E4DC;
    padding: 6px 12px; /* Padding réduit */
    min-height: 22px; /* Hauteur réduite */
    font-size: 11px; /* Taille réduite */
}

/* ===== AMÉLIORATIONS GÉNÉRALES ===== */
/* Widgets de layout */
QWidget#gridLayoutWidget,
QWidget#horizontalLayoutWidget,
QWidget#horizontalLayoutWidget_2 {
    background-color: transparent;
}

/* Layout spacing - PLUS d'espacement entre les éléments */
QGridLayout {
    margin: 8px;
    spacing: 15px; /* ESPACEMENT AUGMENTÉ */
}

QHBoxLayout {
    spacing: 20px; /* ESPACEMENT AUGMENTÉ entre les éléments horizontaux */
    margin: 8px;
}

/* ===== SCROLLBARS - plus fins ===== */
QScrollBar:vertical {
    border: none;
    background-color: #F1F1F1;
    width: 8px; /* Largeur réduite */
    margin: 6px 2px; /* Marge augmentée */
}

QScrollBar::handle:vertical {
    background-color: #C1C1C1;
    border-radius: 4px;
    min-height: 18px; /* Hauteur réduite */
}

QScrollBar::handle:vertical:hover {
    background-color: #A8A8A8;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}

/* ===== FOCUS STYLES ===== */
QPushButton:focus, QLineEdit:focus, QSpinBox:focus, QComboBox:focus {
    outline: none;
    border-color: #8A9A5B;
}

/* ===== ESPACEMENT AUGMENTÉ POUR LES GROUPES ===== */
QGroupBox {
    margin-top: 20px; /* Marge augmentée */
    margin-bottom: 20px; /* Marge augmentée */
}
